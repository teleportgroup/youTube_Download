<Window x:Class="YouTubeDownloader.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="320" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1">
            <!-- Appearance Section -->
            <TextBlock Text="Appearance"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Theme:"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          x:Name="ThemeComboBox"
                          SelectionChanged="ThemeComboBox_SelectionChanged"
                          Width="150"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                    <ComboBoxItem Content="Light" Tag="Light"/>
                    <ComboBoxItem Content="Auto (System)" Tag="Auto"/>
                </ComboBox>
            </Grid>

            <TextBlock Text="Auto will follow your Windows theme setting"
                       Foreground="{DynamicResource TextMutedBrush}"
                       FontSize="11"
                       Margin="150,0,0,20"/>

            <!-- Downloads Section -->
            <TextBlock Text="Downloads"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Concurrent downloads:"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                          x:Name="ConcurrentDownloadsComboBox"
                          SelectionChanged="ConcurrentDownloadsComboBox_SelectionChanged"
                          Width="80"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="1" Tag="1"/>
                    <ComboBoxItem Content="2" Tag="2"/>
                    <ComboBoxItem Content="3" Tag="3"/>
                    <ComboBoxItem Content="4" Tag="4"/>
                    <ComboBoxItem Content="5" Tag="5"/>
                </ComboBox>
            </Grid>

            <TextBlock Text="Higher values download faster but use more bandwidth"
                       Foreground="{DynamicResource TextMutedBrush}"
                       FontSize="11"
                       Margin="150,0,0,0"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2"
                Content="Close"
                Click="CloseButton_Click"
                HorizontalAlignment="Right"
                Padding="20,8"
                Background="{DynamicResource AccentBrush}"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
